.modal-box {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(255,255,255,0.8);
    overflow: hidden;
    z-index: 9999999;
}

.modal-body {
    width: 100%;
    height: 100%;
    text-align: center;
}

.modal-content {
    z-index: 999;
    margin-top: 40%;
}

