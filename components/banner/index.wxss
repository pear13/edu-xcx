.m-carousel {
    position: relative;
}

.m-carousel swiper {
    width: 100%;
}

.m-carousel swiper image {
    width: 100%;
    height: 100%;
}

.m-carousel swiper-item {
    position: relative;
}

.m-carousel-1 .indicator {
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;
    width: 54rpx;
    text-align: center;
    line-height: 28rpx;
    font-size: 24rpx;
    background-color: #fff;
    border-radius: 4rpx;
}

.m-carousel .indicatorWrap {
    position: absolute;
    height: 12rpx;
    right: 30rpx;
    bottom: 16rpx;
}

.m-carousel-2 swiper .inner {
    position: relative;
    width: 730rpx;
    height: 340rpx;
    transform: translateX(10rpx);
}

.m-carousel swiper .inner .u-logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 32rpx;
    height: 66rpx;
}

.m-carousel-2 swiper-item {
    box-sizing: border-box;
    padding: 0 20rpx 0;
}

.m-carousel-2 swiper-item image {
    border-radius: 8rpx;
}

.m-carousel-2 swiper-item image {
    box-shadow: 0 4px 10px 0 rgba(83,83,83,0.20);
}

.m-carousel-2 .indicatorWrap {
    left: 50%;
    right: auto;
    bottom: 16rpx;
    transform: translateX(-50%);
}

.m-carousel-2 .indicator {
    width: 12rpx;
    height: 12rpx;
    background: url(https://yanxuan.nosdn.127.net/15595595034812659.png) no-repeat;
    background-size: 12rpx 12rpx;
    background-position: top center;
    float: left;
    margin-left: 12rpx;
    box-sizing: border-box;
}

.m-carousel-2 .indicator.active {
    width: 12rpx;
    height: 17rpx;
    background: url(http://img.hzzhiyou.net/%E9%80%97%E5%8F%B7.png) no-repeat;
    background-size: 12rpx 17rpx;
    background-position: top center;
}

.m-carousel-3 .indicator {
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;
    width: 56rpx;
    text-align: center;
    line-height: 28rpx;
    font-size: 20rpx;
    background: rgba(0,0,0,.4);
    border-radius: 14rpx;
    color: #fff;
}