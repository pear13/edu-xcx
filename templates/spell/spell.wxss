.spell {
    width: 690rpx;
    display: flex;
    border-radius: 8rpx;
    flex-direction: column;
    background: #fff;
    margin-bottom: 20rpx;
}

.main {
    width: 690rpx;
    height: 300rpx;
    background-color: #c8c8c8;
    border-radius: 8rpx;
}

.main image {
    width: 690rpx;
    height: 300rpx;
    border-radius: 8rpx;
}

.user {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin: 24rpx 22rpx 28rpx 22rpx;
}

.avatar {
    width: 64rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    height: 64rpx;
    background-color: #e0e0e0;
}

.avatar image {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
}

.user-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
}

.user-name {
    font-size: 26rpx;
    line-height: 30rpx;
    margin-right: 20rpx;
    color: #666;
}

.user-info-all {
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16rpx;
    line-height: 30rpx;
    letter-spacing: 0px;
    color: #666;
}

.user-sign {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.user-s-icon {
    width: 26rpx;
    height: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15rpx;
}

.user-s-icon image {
    width: 26rpx;
    height: 20rpx;
}

.user-s-text {
    font-size: 24rpx;
    line-height: 30rpx;
    color: #888;
}

.title {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 0 30rpx;
}

.label {
    width: 90rpx;
    height: 33rpx;
    background-color: #2f72c9;
    border-radius: 4rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    	font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 24rpx;
    margin-right: 20rpx;
    /* margin-top: 10rpx; */
}
.title-name{
    font-size: 32rpx;
    text-align:left;
	font-weight: normal;
	font-stretch: normal;
	line-height:  33rpx;
	letter-spacing: 0px;
    color: #333333;
    max-width: 650rpx;
}
.sub-m{
    font-size: 30rpx;
	font-weight: normal;
	letter-spacing: 0px;
	color: #666666;
    margin-left: 10rpx;
}
.time {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24rpx 30rpx 30rpx 30rpx;
}


.c-price {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx 30rpx 30rpx;
}
.time-sort{
    	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 24rpx;
	letter-spacing: 0px;
	color: #444444;

}
.price{
    	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 32rpx;
	letter-spacing: 0px;
	color: #2f72c9;
}
.comment{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.guide-label {
    position: relative;
    top: -18rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 20rpx;
}

.guide-label .label-list {
   padding: 0 15rpx;
    height: 38rpx;
    /* background-color: #ffefee; */
    border-radius: 15rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: PingFang-SC-Regular;
    font-size: 20rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 24rpx;
    letter-spacing: 0px;
    /* color: #ed564f; */
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}
