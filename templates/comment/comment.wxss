.comment {
    margin: 30rpx 30rpx 20rpx 30rpx;
    width: 630rpx;
    padding: 30rpx;
    background-color: #fff;
    border-radius: 6rpx;
}

.left {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
}

.right {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-end;
    margin-top: 20rpx;
}

.c-src {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    background-color: #348ef4;
}

.c-src image {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
}

.name-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    margin-left: 23rpx;
}

.right-name-info {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: flex-end;
    margin-right: 23rpx;
}

.name {
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    padding-bottom: 20rpx;
    letter-spacing: 0px;
    color: #666;
}

.info {
    padding: 19rpx;
    background-color: #f4f4f4;
    border-radius: 8rpx;
}

.star {
    display: flex;
    flex-direction: row;
    font-size: 26rpx;
    line-height: 26rpx;
    color: #333;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 10rpx 0;
}

.content {
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #333;
    padding-top: 15rpx;
    border-top: 1rpx #fdfdfd solid;
}

.tch {
    margin-top: 30rpx;
    background-color: #f4f4f4;
    padding: 20rpx;
}
