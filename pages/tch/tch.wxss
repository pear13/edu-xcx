/* pages/tch/tch.wxss */

page {
    background: #fff;
    height: 100%;
    width: 100%;
}

.weeks {
    /* position: fixed;
    top: 0; */
    width: 100%;
    height: 200rpx;
}

.week {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    background: #fff;
}

.week-item {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.day_pass {
    opacity: 0.5;
}

.day_s {
    width: 56rpx;
    height: 56rpx;
    border-radius: 56rpx;
    background-color: #2f72c9;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    margin-bottom: 10rpx;
}
.day_sec{
    
    width: 56rpx;
    height: 6rpx;
    border-radius: 3rpx;
    background-color: #2f72c9;
}

.time {
    display: flex;
    flex-direction: column;
    background: #fff;
    padding-top: 30rpx;
    /* margin-top: 200rpx; */
    height: 524px;
}

.time-list {
    background: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 690rpx;
    margin: 0 30rpx;
    border-top: 1rpx solid #d9d9d9;
    border-bottom: 0.5rpx solid #d9d9d9;
}

.time-tit {
    font-size: 30rpx;
    line-height: 84rpx;
    color: #333;
    text-align: center;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    width: 200rpx;
    font-weight: normal;
    font-stretch: normal;
}

.time-icon {
    width: 92rpx;
    height: 44rpx;
	background-color: #f0f0f0;
	border-radius: 22rpx;
    margin-left: 40rpx;
}
.act{
        background: url("http://img.aeclub.top/select.png");
    background-size: 100%;
}
.ok {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    position: fixed;
    bottom: 200rpx;
    right: 40rpx;
}

.ok image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.check {
    width: 150rpx;
    height: 50rpx;
    background-color: #348ef4;
    border-radius: 30rpx;
    font-family: PingFang-SC-Medium;
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 24rpx;
    letter-spacing: 0rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 300rpx;
    bottom: 200rpx;

}