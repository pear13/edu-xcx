/* pages/spell/spell.wxss */
@import "/templates/spell/spell.wxss";

.tab {
    width: 690rpx;
    margin-left: 30rpx;
    height: 60rpx;
    background-color: #fff;
    border-radius: 8rpx;
    border: solid 1rpx #b9b9b9;
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.tab-item {
    width: 33%;
    height: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.br {
    border-right: 1rpx solid #b9b9b9;
}

.tab-name {
    height: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 24rpx;
    letter-spacing: 0px;
}

.tab-icon {
    width: 21rpx;
    height: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 13rpx;
}

.tab-icon image {
    width: 21rpx;
    height: 12rpx;
}

.tab-icons {
    width: 30rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 13rpx;
}

.tab-icons image {
    width: 30rpx;
    height: 40rpx;
}

.content {
    margin: 30rpx;
    margin-bottom: 150rpx;
}

.avatar {
}

.comment-f {
    margin-left: 13rpx;
    font-size: 26rpx;
    color: #777;
}

.filter {
    /* height: 500rpx; */
    width: 690rpx;
    background: #fff;
    border-radius: 10rpx;
}

.filter-t {
    font-size: 26rpx;
    line-height: 40rpx;
    color: #555;
    padding: 30rpx 30rpx 24rpx 30rpx;
}

.filter-list {
    padding-left: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.filter-item {
    min-width: 100rpx;
    padding: 0rpx 32rpx;
    height: 54rpx;
    background-color: #2f72c9;
    border-radius: 27rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    margin-right: 50rpx;
    letter-spacing: 0px;
    color: #fff;
    margin-bottom: 25rpx;
}

.act {
    background-color: #2f72c9;
}

.fail {
    background-color: #f2f2f2;
    color: #444;
}

.acttab {
    color: #2f72c9;
}

.failtab {
    color: #444;
}

.rok {
    height: 80rpx;
    width: 100%;
    background: #333;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.reok {
    height: 100%;
    width: 40%;
    border: 1rpx solid #d9d9d9;
    color: #333;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
}

.ok {
    height: 100%;
    width: 60%;
    background: #2f72c9;
    color: #fff;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
