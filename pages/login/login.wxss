/* pages/login/login.wxss */

.u-bg {
    width: 100%;
    height: 410rpx;
    display: block;
}

.m-login {
    position: relative;
}

.m-login-box {
    position: absolute;
    width: 360rpx;
    top: 0;
    left: 50%;
    margin-left: -180rpx;
}

.u-logo {
    display: block;
    margin: 54rpx auto;
    width: 138rpx;
    height: 138rpx;
    border-radius: 138rpx;
    border: 10rpx #fff solid;
}

.u-login-text {
    font-size: 30rpx;
    color: #fff;
    line-height: 1.5;
    text-align: center;
}

.u-btn {
    margin: 0;
    width: 320rpx;
}

.m-tips {
    color: #555;
    font-size: 24rpx;
    text-align: center;
    margin-top: 22rpx;
}

.m-login-btn {
    display: flex;
    margin: 100rpx auto 40rpx auto;
    width: 690rpx;
    height: 88rpx;
    border-radius: 8rpx;
    line-height: 88rpx;
    justify-content: space-between;
}

.u-btn-back {
    margin: 0;
    width: 320rpx;
    color: #fff;
    border-radius: 8rpx;
    background: #999;
}

.bun-login {
    margin-top: 102rpx;
    margin-left: 70rpx;
    width: 610rpx;
    height: 90rpx;
    background-color: #2f72c9;
    border-radius: 45rpx;
    font-size: 32rpx;
    font-weight: normal;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}
