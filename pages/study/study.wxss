/* pages/study/study.wxss */
@import "/templates/sublist/sublist.wxss";

.top {
    margin: 25rpx 0 0 0;
}

.card {
    width: 750rpx;
    height: 250rpx;
    background-image: url('http://group.zhengqi1995.com/111w2.png');
    background-repeat: no-repeat;
    -moz-background-size: 100% 100%;
    background-size: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.all-nums {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 116rpx;
    height: 42rpx;
    border-radius: 21rpx;
    background-color: rgba(255, 255, 255, 0.12);
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0px;
    color: #fff;
}

.name {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100rpx;
}

.card-icon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.card-icon image {
    width: 30rpx;
    height: 30rpx;
}

.card-name {
    font-size: 35rpx;
    color: #fff;
}

.card-num {
    font-size: 30rpx;
    color: #fff;
    height: 60rpx;
    border-radius: 20rpx;
}

.valid {
    font-size: 26rpx;
    color: #fff;
}

.flex-study {
    width: 750rpx;
    /* height: 254rpx; */
    padding: 30rpx 0 30rpx 0;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-end;
}

.study {
    width: 750rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.study-l {
    padding-right: 50rpx;
    padding-left: 45rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.nums {
    font-size: 46rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0px;
    color: #ff4729;
    margin-right: 14rpx;
}

.wait-num {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0px;
    color: #444;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 36rpx;
}

.num-r-b {
    border-right: solid 1rpx #d9d9d9;
}

.today {
    width: 144rpx;
    height: 52rpx;
    background-color: #f44d40;
    border-radius: 26rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0px;
    color: #fff;
}

.study-i {
    width: 32rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15rpx;
}

.study-i image {
    width: 32rpx;
    height: 30rpx;
}

.study-icon {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.study-c-n {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0px;
    color: #333;
}

.partner {
    width: 144rpx;
    height: 52rpx;
    background-color: #f44d40;
    border-radius: 26rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0px;
    color: #fff;
    margin-top: 30rpx;
    margin-right: 45rpx;
}

.now {
    padding: 30rpx 30rpx 20rpx 30rpx;
    width: 690rpx;
    background: #fff;
    margin-top: 20rpx;
}

.team {
    /* padding: 30rpx 30rpx 20rpx 30rpx; */
    width: 720rpx;
    background: #fff;
    margin-top: 20rpx;
    padding-left: 30rpx;
}

.now-tit {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 30rpx 20rpx 0rpx;
}

.now-name {
    font-size: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0px;
    color: #333;
}

.now-tit-more {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.now-more {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0px;
    color: #666;
    margin-right: 15rpx;
}

.now-more-icon {
    width: 30rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.now-more-icon image {
    width: 30rpx;
    height: 30rpx;
}

.nowlist {
    /* padding: 24rpx 0rpx 0 0; */
    white-space: nowrap;
}

.now-item {
    width: 215rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
    display: inline-block;
    vertical-align: top;
    overflow: hidden;
    background: #fff;
}

.now-item-f {
    width: 215rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.now-sub-img {
    width: 215rpx;
    height: 153rpx;
    background-color: #d9d9d9;
    border-radius: 10rpx;
}

.now-sub-img image {
    width: 215rpx;
    height: 153rpx;
    border-radius: 10px;
}

.now-sub-name {
    margin-top: 16rpx;
    width: 215rpx;
    white-space: pre-wrap;
    font-family: PingFang-SC-Regular;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 32rpx;
    letter-spacing: 0px;
    color: #333;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
