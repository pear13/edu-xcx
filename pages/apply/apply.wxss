/* pages/apply/apply.wxss */
/* 我的介绍表单模版 */
@import "/templates/introduce/introduce.wxss";

.list-item .list-text{
font-size: 24rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: rgba(51, 51, 51, 1);
line-height: 97rpx;
display: flex;
flex-direction: row;
justify-content: space-between;
border-bottom: 1rpx solid #f1f1f1;

}


.t-image{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.list-tit {
width: 50%;
   
}
.ts-image{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
    width: 100%;
    background: #fff;
    margin:30rpx 0;
}
.src-w{
    width: 200rpx;

}

.list-value {
    font-family: PingFang-SC-Regular;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 24rpx;
    letter-spacing: 0px;
    color: #555;
    text-align: right;
}

.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 30rpx;
    /* margin-bottom: 200rpx; */
}
.bottom {
    width: 690rpx;
    height: 90rpx;
    background-color: #2f72c9;
    border-radius: 45rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 46rpx;
    font-size: 30rpx;
    color: #fff;
    z-index: 1111111;
}

.choise {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    
}

.cho-tit {
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 97rpx;
}

.cho-img {
    width: 20rpx;
    height: 97rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 12rpx;
}

.cho-img image {
    width: 20rpx;
    height: 11rpx;
}
.sound-tit{
    font-size: 28rpx;
    color: #333;
    margin-top: 30rpx;
}