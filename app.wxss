.flex {
  /* 转为弹性盒模型*/
  display: flex;
}

.flex_wrap {
  /* 转为弹性盒模型并自动换行*/
  display: flex;
  flex-wrap: wrap;
}

.flex_inline {
  /* 转为行内弹性盒模型*/
  display: inline-flex;
}

.flex_b {
  /* 垂直底部对齐*/
  display: flex;
  align-items: flex-end;
}

.flex_tb {
  /* 垂直两端对齐*/
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.flex_tb_c {
  /* 多行垂直两端对齐，水平居中*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.flex_line_c_m {
  /* 多行垂直居中，水平居中*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.flex_line_end {
  /* 多行垂直起点在下沿*/
  display: flex;
  flex-direction: column-reverse;
}

.flex_lr {
  /* 水平两端对齐，剩余空间平均分布*/
  display: flex;
  justify-content: space-between;
}

.flex_lr_m {
  /* 水平两端对齐，剩余空间平均分布，垂直居中*/
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex_c_m {
  /* 垂直水平居中*/
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex_c {
  /* 水平居中*/
  display: flex;
  justify-content: center;
}

.flex_m {
  /* 垂直居中*/
  display: flex;
  align-items: center;
}

.flex_nosize {
  /* 子元素不自动*/
  flex-shrink: 0;
}

.flex_autosize {
  /* 子元素自动宽度*/
  flex-grow: 1;
}

.one-line-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.two-line-name {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* radio */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  text-align: center;
  font-size: 0rpx; /* 对勾大小 去掉 */
  background-color: #fa6210;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

radio {
  border-radius: 50%;
  width: 30rpx; /* 最好是4的倍数，不然会不在中间 */
  height: 30rpx;
  border: 2rpx solid #fa6210; /* 设置边框（外圆） */
  font-size: 0; /* 让边框重合 */
}

radio .wx-radio-input {
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  border: none; /* 替换边框（隐藏原有边框） */
}
